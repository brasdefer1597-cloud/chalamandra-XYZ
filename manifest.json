{
  "manifest_version": 3,
  "name": "Chalamandra QuantumMind XYZ",
  "version": "1.0",
  "description": "Análisis dialéctico con IA Local-First (Gemini Nano)",
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "static/images/icon128.png"
    }
  },
  "icons": {
    "128": "static/images/icon128.png"
  },
  "options_page": "options.html"
}